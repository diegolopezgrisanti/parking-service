<?xml version="1.0" encoding="UTF-8"?>
<profiles version="12">
    <profile kind="CodeFormatterProfile" name="CustomProfile" version="12">
        <!-- Indentation and Tabs -->
        <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
        <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
        <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>

        <!-- Line Width -->
        <setting id="org.eclipse.jdt.core.formatter.line_split" value="120"/>

        <!-- Brace Placement -->
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_block" value="end_of_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_method_declaration" value="end_of_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_anonymous_type" value="end_of_line"/>

        <!-- Import Order -->
        <setting id="org.eclipse.jdt.core.formatter.import_order" value="javax, org, com, *"/>

        <!-- Method Call Formatting -->
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_method_invocation" value="next_line"/>
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_method_declaration" value="next_line"/>
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_constructor_declaration" value="next_line"/>
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_constructor_invocation" value="next_line"/>
        <setting id="org.eclipse.jdt.core.formatter.alignment_for_arguments_in_method_invocation" value="next_line"/>
        <setting id="org.eclipse.jdt.core.formatter.align_parameters_in_method_invocation" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.align_parameters_in_method_declaration" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_opening_brace_in_method" value="true"/>

        <!-- Line Wrapping -->
        <setting id="org.eclipse.jdt.core.formatter.wrap_after_endif" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.wrap_after_else" value="true"/>

        <!-- Comment Formatting -->
        <setting id="org.eclipse.jdt.core.formatter.comment_formatting" value="true"/>

        <!-- Space Formatting -->
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_array_initializer" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_method_declaration_arguments" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_opening_paren_in_method_declaration" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_paren_in_method_invocation" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_opening_brace_in_type" value="true"/>

        <!-- New Line Formatting -->
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_opening_brace_in_type" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_closing_brace_in_type" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_opening_brace_in_method" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_closing_brace_in_method" value="true"/>
    </profile>
</profiles>
